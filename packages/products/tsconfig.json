{
  "extends": "@zotijstestingms/config-typescript/tsconfig.base.json",
  "compilerOptions": {
    /* Aliases */
    "baseUrl": "./src/",
    "paths": {
      "config": ["config"],
      "controllers/*": ["controllers/*"],
      "routes/*": ["routes/*"],
      "services/*": ["services/*"]
    }
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules"]
}
